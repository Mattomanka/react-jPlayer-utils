{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "extends": "airbnb",
    "rules": {
        "import/no-extraneous-dependencies": ["error", { "devDependencies": [
            "jsdom.js",
             "**/*.spec.*{js,jsx}",
             "**/*.config.*js"
        ] }]
    },
    "plugins": [
        "react"
    ]
}